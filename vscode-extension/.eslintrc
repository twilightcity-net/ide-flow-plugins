{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "extends": ["prettier"],
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint"],
  "rules": {
    "@typescript-eslint/naming-convention": "warn",
    "curly": "warn",
    "eqeqeq": "warn",
    "no-throw-literal": "warn",
    "semi": ["warn", "never"],
    "@typescript-eslint/semi": ["warn", "never"]
  },
  "ignorePatterns": ["out", "dist", "**/*.d.ts"]
}
